{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.bbl": true,
        "**/*.aux": true,
        // "**/*.log": true,
        "**/*.out": true,
        "**/*.fls": true,
        "**/*.fdb_latexmk": true,
        "**/*.synctex.gz": true,
        "**/*.toc": true,
        "**/*.lof": true,
        "**/*.lot": true,
        "**/*.lol   ": true,
    },
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.tools": [
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipeDefault": "lualatex",
    "latex-workshop.latex.recipes": [
        {
            "name": "LuaLaTeX",
            "tools": [
                "lualatex"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    // "latex-workshop.latex.clean.enabled": true,
    // "latex-workshop.latex.clean.onBuild": true
}