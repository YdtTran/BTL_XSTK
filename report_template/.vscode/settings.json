{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.bbl": true,
        "**/*.aux": true,
        // "**/*.log": true,
        "**/*.out": true,
        "**/*.fls": true,
        "**/*.fdb_latexmk": true,
        "**/*.synctex.gz": true,
        "**/*.toc": true,
        "**/*.lof": true,
        "**/*.lot": true,
        "**/*.lol   ": true,
    },
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-file-line-error",
                "-interaction=errorstopmode",
                "-halt-on-error",
                "-synctex=1",
                "-shell-escape",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Build on save (stop on error)",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    // "latex-workshop.latex.clean.enabled": true,
    // "latex-workshop.latex.clean.onBuild": true
}